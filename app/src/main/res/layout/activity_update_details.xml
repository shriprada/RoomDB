<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".UpdateDetails">


    <TextView
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Update Page"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/upname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/Update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="Enter the Name" />

    <EditText
        android:id="@+id/upaddress"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/upname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter the Address" />

    <EditText
        android:id="@+id/upemail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/upaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter the Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/upphone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/upemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter the Phone number"
        android:inputType="number" />

    <EditText
        android:id="@+id/upusername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/upphone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter the Username" />

    <EditText
        android:id="@+id/uppassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:layout_below="@+id/upusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter the Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/upupdatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uppassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/black"
        android:text="Update" />

    <Button
        android:id="@+id/updeletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uppassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/black"
        android:text="Delete" />

</RelativeLayout>